<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/desk2"
     >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="@dimen/bookitem_width"
                android:layout_height="@dimen/bookitem_height"
                android:background="@drawable/book_item"
                android:gravity="center"
                android:maxLines="3"
                android:paddingLeft="@dimen/bookitem_padding_left"
                android:paddingRight="@dimen/bookitem_padding_right"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/select"
                android:visibility="gone" />

</RelativeLayout>
